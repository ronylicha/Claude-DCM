{
  "name": "@claude-code/context-manager",
  "version": "3.0.0",
  "description": "Distributed Context Manager for Claude Code - Inter-agent communication and context management",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "start": "bun run src/server.ts & bun run src/websocket-server.ts",
    "start:api": "bun run src/server.ts",
    "start:ws": "bun run src/websocket-server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "setup:db": "bash scripts/setup-db.sh",
    "setup:hooks": "bash scripts/setup-hooks.sh",
    "install:full": "bun install && bun run setup:db && bun run setup:hooks",
    "backup": "bash scripts/backup-db.sh",
    "health": "bash scripts/health-check.sh",
    "typecheck": "bun x tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.11.10",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rony/claude-context-manager"
  },
  "keywords": ["claude-code", "context-manager", "multi-agent", "websocket", "distributed"]
}
